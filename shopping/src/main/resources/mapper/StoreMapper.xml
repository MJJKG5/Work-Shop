<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gp.shop.repository.StoreMapper">
    <resultMap id="storeMap" type="com.gp.shop.model.Store">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="createTime" property="createTime"/>
    </resultMap>

    <sql id="storeList">id, `name`, createTime</sql>

    <select id="queryByList" resultMap="storeMap">
        SELECT
            <include refid="storeList"/>
        FROM
            store
    <where>
        <if test="null != null and '' != name">
            name = #{name}
        </if>
    </where>
        LIMIT
            #{page.index}, #{page.pageSize}
    </select>

    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO store
            (`name`)
        VALUES
            (#{store.name})
    </insert>

    <update id="update">
        UPDATE store
        <set>
            <if test="null != store.name and '' != store.name">
                name = #{store.name}
            </if>
        </set>
        WHERE
            id = #{store.id}
    </update>

    <delete id="delete">
        DELETE FROM store WHERE id = #{id}
    </delete>

    <select id="count" resultType="java.lang.Long">
        SELECT
            COUNT(id)
        FROM
            store
        <where>
            <if test="null != name and '' != name">
                name = #{name}
            </if>
        </where>
    </select>
</mapper>