<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gp.shop.repository.ShopCartMapper">
    <resultMap id="shopCartMap" type="com.gp.shop.model.ShopCart">
        <id column="id" property="id"/>
        <result column="commId" property="commId"/>
        <result column="number" property="number"/>
        <result column="accountId" property="accountId"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="url" property="url"/>

    </resultMap>

    <sql id="shopCartList">id, commId, `number`, accountId</sql>

    <select id="queryByList" resultMap="shopCartMap">
        SELECT
            sc.id AS id,
            sc.commId AS commId,
            sc.number AS number,
            sc.accountId AS accountId,
            c.name AS name,
            c.price AS price,
            c.url AS url
        FROM
            shop_cart sc
        JOIN
            commodity c
        ON
            sc.commId = c.id
        WHERE
            sc.accountId = #{accountId}
        LIMIT
            #{page.index}, #{page.pageSize}
    </select>

    <select id="queryByAccountId" resultMap="shopCartMap">
        SELECT
            <include refid="shopCartList"/>
        FROM
            shop_cart
        WHERE
            accountId = #{accountId}
    </select>

    <select id="queryByAccountIdAndCommId" resultType="com.gp.shop.model.ShopCart">
        SELECT
            <include refid="shopCartList"/>
        FROM
            shop_cart
        WHERE
            accountId = #{accountId}
        AND
            commId = #{commId}
    </select>

    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO shop_cart
            (commId, `number`, accountId)
        VALUES
            (#{shopCart.commId}, #{shopCart.number}, #{shopCart.accountId})
    </insert>

    <update id="update">
        UPDATE shop_cart
        <set>
            <if test="null != shopCart.number">
                `number` = #{shopCart.number}
            </if>
        </set>
        WHERE
            accountId = #{shopCart.accountId}
        AND
            commId = #{shopCart.commId}
    </update>

    <delete id="delete">
        DELETE FROM shop_cart WHERE id = #{id}
    </delete>

    <delete id="deleteByAccountIdAndCommId">
        DELETE FROM
            shop_cart
        WHERE
            accountId = #{accountId}
        AND
            commId = #{commId}
    </delete>

    <delete id="deleteByCommIds">
        DELETE FROM
            shop_cart
        WHERE
            commId
        IN
        <foreach collection="commIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="count" resultType="java.lang.Long">
        SELECT
            COUNT(id)
        FROM
            shop_cart
        WHERE
            accountId = #{accountId}
    </select>
</mapper>